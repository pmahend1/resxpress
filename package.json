{
    "name": "resxpress",
    "displayName": "ResXpress",
    "license": "MIT",
    "description": "Resx editor, previewer and sorting extension",
    "publisher": "PrateekMahendrakar",
    "icon": "images/logo.png",
    "repository": {
        "url": "https://github.com/pmahend1/resxpress.git"
    },
    "bugs": {
        "url": "https://github.com/pmahend1/resxpress/issues"
    },
    "galleryBanner": {
        "color": "#123456",
        "theme": "dark"
    },
    "version": "6.0.1",
    "engines": {
        "vscode": "^1.69.0"
    },
    "categories": [
        "Snippets",
        "Visualization",
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:**/*.resx"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "customEditors": [
            {
                "viewType": "resxpress.editor",
                "displayName": "ResXpress Editor",
                "selector": [
                    {
                        "filenamePattern": "*.resx"
                    }
                ],
                "priority": "option"
            }
        ],
        "commands": [
            {
                "command": "resxpress.resxpreview",
                "title": "ResXpress: Markdown Preview"
            },
            {
                "command": "resxpress.sortbykeys",
                "title": "ResXpress: Sort By Keys"
            },
            {
                "command": "resxpress.newpreview",
                "title": "ResXpress: Web Preview"
            }
        ],
        "snippets": [
            {
                "language": "xml",
                "filenamePattern": "*.resx",
                "path": "./snippets/resx.json"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "resxpress.newpreview",
                    "group": "z_commands",
                    "when": "resourceExtname == .resx"
                }
            ],
            "editor/title/context": [
                {
                    "command": "resxpress.newpreview",
                    "group": "3_preview",
                    "when": "resourceExtname == .resx"
                }
            ]
        },
        "configuration": [
            {
                "title": "ResXpress Settings",
                "properties": {
                    "resxpress.configuration.generateStronglyTypedResourceClassOnSave": {
                        "type": "boolean",
                        "default": false,
                        "markdownDescription": "Generate/update strongly typed resource class files when updates to resx files are made. Default is **`false`** \n\n Ex: Resource1.resx â†’ Resource1.Designer.cs \n\n > **Note**: Windows : You will need to add `resgen` to environment PATH. \n\n Other platforms it is generated by extension. May not be reliable. "
                    }
                }
            }
        ]
    },
    "capabilities": {
        "untrustedWorkspaces": {
            "supported": true
        }
    },
    "keywords": [
        "resx",
        "custom editor",
        "editor",
        "xml",
        "preview",
        "markdown",
        "sort"
    ],
    "markdown": "standard",
    "scripts": {
        "compile": "tsc -p ./",
        "lint": "eslint -c .eslintrc.json --ext .ts ./src",
        "watch": "tsc -watch -p ./",
        "vscode:prepublish": "webpack --mode production",
        "webpack": "webpack --mode development",
        "webpack-dev": "webpack --mode development --watch",
        "test-compile": "tsc -p ./"
    },
    "devDependencies": {
        "@types/glob": "^8.0.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "^18.11.18",
        "@types/vscode": "^1.69.0",
        "@types/xml-js": "^1.0.0",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "eslint": "^8.56.0",
        "glob": "^8.0.3",
        "mocha": "^10.2.0",
        "ts-loader": "^9.2.3",
        "typescript": "*",
        "vscode-test": "^1.5.1",
        "webpack": "^5.23.0",
        "webpack-cli": "^5.0.1",
        "xml-js": "^1.6.11"
    }
}
